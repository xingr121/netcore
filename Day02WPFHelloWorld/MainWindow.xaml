<Window x:Class="Day02WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day02WPFHelloWorld"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="160" Width="410">
    <Grid>
        <Label Content="What is your name?" HorizontalAlignment="Left" Margin="18,20,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TbxName" HorizontalAlignment="Left" Margin="211,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="183" Height="25"/>
        <Button Click="BtnHelloLabel_Click"  Name="BtnHelloLabel" Content="Say hello with label" HorizontalAlignment="Left" Margin="18,56,0,0" VerticalAlignment="Top" Height="23" Width="156"/>
        <Button Click="BtnHelloMessageBox_Click" Name="BtnHelloMessageBox" Content="Say hello with mesage box" HorizontalAlignment="Left" Margin="211,56,0,0" VerticalAlignment="Top" Height="23" Width="183"/>
        <Label Name="LblGreeting" Content="..." HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Width="376"/>

    </Grid>
</Window>
